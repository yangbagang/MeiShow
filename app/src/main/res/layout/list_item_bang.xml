<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/px_158"
              android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iv_pm"
        android:layout_width="@dimen/px_42"
        android:layout_height="@dimen/px_72"
        android:layout_marginLeft="@dimen/px_34"
        android:scaleType="fitXY"
        android:src="@mipmap/pm1"/>

    <TextView
        android:id="@+id/tv_pm"
        android:layout_width="@dimen/px_42"
        android:layout_height="@dimen/px_72"
        android:gravity="center"
        android:layout_marginLeft="@dimen/px_34"
        android:text="1"
        android:textSize="@dimen/px_text_30"
        android:textColor="#545866"/>

    <com.ybg.app.meishow.view.CircleImageView
        android:id="@+id/ci_pm"
        android:layout_width="@dimen/px_80"
        android:layout_height="@dimen/px_80"
        android:src="@mipmap/default_avatar"
        android:layout_marginLeft="@dimen/px_30"/>

    <TextView
        android:id="@+id/tv_pm_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_16"
        android:text="孙行者"
        android:textSize="@dimen/px_text_30"
        android:textColor="#545866"/>

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/tv_score_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="美力值"
        android:textSize="@dimen/px_text_24"
        android:textColor="#545866"/>
    <TextView
        android:id="@+id/tv_pm_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/px_16"
        android:text="123456"
        android:textSize="@dimen/px_text_24"
        android:textColor="#de4942"/>

</LinearLayout>